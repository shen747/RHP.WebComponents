{
    "name": "@rhp/rhp-components",
    "version": "0.0.0",
    "description": "RHP React component library",
    "private": true,
    "license": "UNLICENSED",
    "type": "module",
    "main": "./cjs/index.cjs",
    "module": "./esm/index.mjs",
    "types": "./types/index.d.ts",
    "sideEffects": false,
    "files": [
        "cjs",
        "esm",
        "types",
        "src/styles"
    ],
    "scripts": {
        "dev": "vite build --watch",
        "build": "vite build",
        "build:types": "tsc --emitDeclarationOnly",
        "storybook": "storybook dev -p 7007",
        "build-storybook": "storybook build",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "echo 'Linting not configured'",
        "clean": "rimraf dist dist-tmp types storybook-static",
        "prepublishOnly": "npm run clean && npm run build"
    },
    "peerDependencies": {
        "react": ">=18 <22",
        "react-dom": ">=18 <22"
    },
    "dependencies": {
        "@floating-ui/react": "^0.26.28"
    },
    "devDependencies": {
        "@storybook/addon-a11y": "^8.6.14",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-links": "^8.6.14",
        "@storybook/react-vite": "^8.6.14",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jsdom": "^21.1.7",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@vitejs/plugin-react": "^4.3.0",
        "@vitest/coverage-v8": "^3.2.4",
        "jsdom": "^26.1.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rimraf": "^5.0.0",
        "sass": "^1.72.0",
        "typescript": "^5.6.2",
        "vite": "^5.4.0",
        "vite-plugin-dts": "^4.2.1",
        "vitest": "^3.2.4"
    },
    "publishConfig": {
        "access": "restricted"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/rhp-components.git"
    },
    "keywords": [
        "react",
        "components",
        "ui",
        "typescript",
        "storybook"
    ]
}
